function updateDatabase(newData, sha, callback) {
    const apiUrl = "https://api.github.com/repos/infinity-master/Paid/contents/database.json";

    fetch(apiUrl, {
        method: "PUT",
        headers: {
            "Authorization": `token ${TOKEN_PAID}`,
            "Content-Type": "application/json"
        },
        body: JSON.stringify({
            message: "Updated user data",
            content: btoa(JSON.stringify(newData, null, 2)),
            sha: sha
        })
    })
    .then(() => callback && callback())
    .catch(() => alert("Error updating database!"));
}
